}

/* 头部 */

.order-bg {
  width: 100%;
  height: 260rpx;
}

.statustext {
  color: white;
  font-size: 32rpx;
  position: absolute;
  top: 58rpx;
  left: 106rpx;
}

.address-box {
  width: 690rpx;
  height: 162rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10px;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 119rpx;
}

.text-box {
  height: 38rpx;
  display: flex;
  align-content: center;
  margin-top: 41rpx;
  margin-left: 27rpx;
}

.text-box image {
  width: 38rpx;
  height: 38rpx;
}

.username {
  margin-left: 15rpx;
