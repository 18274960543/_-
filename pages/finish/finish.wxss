  align-content: center;
  justify-content: space-between;
}

.service-box-footer text {
  font-size: 28rpx;
  color: #333;
  margin-top: 14rpx;
}

.service-box-right {
  width: 250rpx;
  justify-content: space-between;
  display: flex;
  align-content: center;
  margin-right: 10rpx;
}

.tele-icon, .nav-icon {
  height: 50rpx;
  width: 50rpx;
  margin-top: 8rpx;
}

.service-line1 {
  height: 14px;
  width: 1px;
  background-color: #ccc;
  margin-top: 18rpx;
  margin-left: 8rpx;
}

.detail-box {
  width: 691rpx;
  height: 521rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10px;
  margin-left: 50%;
  transform: translateX(-50%);
  margin-top: 20rpx;
}

.cost-box {
