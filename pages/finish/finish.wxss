  width: 628rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  margin-top: 20rpx;
}

.cost-box text {
  font-size: 28rpx;
  color: #333;
}

.distance {
  width: 660rpx;
  height: 162rpx;
  background: rgba(250, 250, 250, 1);
  border-radius: 6px;
  margin-top: 20rpx;
  margin-left: 50%;
  transform: translateX(-50%);
}

.distance-title {
  font-size: 28rpx;
  color: #999;
  margin-left: 17rpx;
  display: inline-block;
  margin-top: 20rpx;
}

.small-address-icon, .arrows-icon {
  width: 40rpx;
  height: 40rpx;
}

.arrows-icon {
  margin: 0 15rpx;
}

.distance-detail {
  margin-top: 30rpx;
  display: flex;
  align-content: center;
  margin-left: 5rpx;
}

.distance-detail text {
  font-size: 24rpx;
  color: #999;
}

.separator {
  width: 630rpx;
  height: 28rpx;
  margin-left: 50%;
  transform: translateX(-50%);
}

.tatal-price-boc {
  display: flex;
  justify-content: space-between;
  width: 628rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  margin-top: 15rpx;
}

.actualpayment {
  color: #333;
  font-size: 28rpx;
}

.total-price {
  color: #fc4c4c;
  font-size: 28rpx;
  font-weight: bold;
}

.big-total-price {
  font-size: 36rpx;
}

