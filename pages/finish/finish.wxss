  margin-left: 50%;
  transform: translateX(-50%);
  margin-top: 15rpx;
}

.coupon-box {
  display: flex;
  width: 628rpx;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  margin-top: 15rpx;
  margin-left: 50%;
  transform: translateX(-50%);
}

.coupon {
  font-size: 28rpx;
  color: #333;
  margin-top: 15rpx;
}

.couponstatus {
  color: #ccc;
  margin-left: 8rpx;
}

.couponstatus-img {
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
}

.service-box-footer {
  height: 100rpx;
  width: 628rpx;
