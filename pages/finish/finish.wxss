  height: 541rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10px;
  margin-left: 50%;
  transform: translateX(-50%);
  margin-top: 30rpx;
}

.service-box-header {
  display: flex;
  align-content: center;
  padding-top: 24rpx;
  margin-left: 26rpx;
}

.service-box-header text {
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

.merchant-img {
  height: 38rpx;
  width: 38rpx;
}

.merchant-icon {
  height: 25rpx;
  width: 14rpx;
  margin-top: 9rpx;
  margin-left: 15rpx;
}

.service-box-goods {
  width: 650rpx;
  height: 168rpx;
  background: rgba(250, 250, 250, 1);
  border-radius: 10rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  margin-top: 20rpx;
