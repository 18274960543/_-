  margin-top: 15rpx;
}

.service-goods-text {
  margin-left: 20rpx;
  margin-top: 24rpx;
}

.service-goods-title {
  width: 480rpx;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #333;
}

.service-goods-attr, .service-goods-time {
  font-size: 24rpx;
  color: #666;
}

.service-goods-attr {
  margin-top: 14rpx;
  display: flex;
  justify-content: space-between;
}

.service-goods-time {
  margin-top: 10rpx;
}

.after-sale {
  width: 180rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 1);
