.showStore {
  width: 90%;
  background: #fff;
  z-index: 101;
  position: absolute;
  top: 40%;
  left: 5%;
  border-radius: 10rpx;
  padding-bottom: 10rpx;
}

.showStore-1 {
  font-size: 36rpx;
  font-weight: bold;
  border-bottom: 1px solid #eee;
  height: 100rpx;
  line-height: 100rpx;
  width: 90%;
  margin: 0 auto;
}

.showStore-2 {
  font-size: 26rpx;
  width: 90%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}

.showStore-2 view:nth-child(1) {
  height: 80rpx;
  line-height: 80rpx;
}

.showStore-2 view:nth-child(2) {
  width: 28rpx;
  height: 28rpx;
  border: 1px solid #333;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}
.shadow{
  background:#000;
  opacity: 0.6;
  position: fixed;
  top:0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  display: none
}
.show{
  display: block
}
