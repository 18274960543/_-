.text {
  font-size: 24rpx;
  color: #666;
  display: block;
  padding: 10rpx 40rpx;
}

.top {
  padding: 0 40rpx;
  background: #fff;
}

.list {
  background: #fff;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #f3f3f3;
  padding: 15rpx 0;
  align-items: center;
}

.left image {
  height: 28rpx;
  width: 14rpx;
}

.left {
  font-size: 28rpx;
  color: #666;
}

.right {
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  width: 75%;
  justify-content: flex-end;
  height: 70rpx;
}

.right picker {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}

.right input {
  border-radius: 15rpx;
  margin-right: 10rpx;
  text-align: right;
  width: 90%;
  padding-right: 1%;
  height: 70rpx;
  line-height: 70rpx;
}
.right image {
  width: 14rpx;
  height: 25rpx;
  margin-left: 10rpx;
}

.right view {
  border: 1px solid #eee;
  border-radius: 50rpx;
  width: 125rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  margin-left: 20rpx;
  color: #999;
  font-size: 28rpx;
}

.bttom {
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 40rpx;
}

button {
 
  border-radius: 100rpx;
  width: 90%;
  margin-top: 50rpx;
  color: #530b0b;
  margin-bottom: 100rpx;
}

.button-hover {
  background: #773ADF !important;
}

.right view.active {
  border: 1rpx solid #773ADF;
  color: #773ADF;
}
