  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.mainList-price {
  color: #fc4c4c;
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.mainList-price view:nth-child(1) {
  font-size: 24rpx;
}

.mainList-price view:nth-child(1) text {
