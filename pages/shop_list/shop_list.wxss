.mainList-store {
  font-size: 20rpx;
}

/* 筛选 */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.8);
}

.screening {
  width: 80%;
  height: 100%;
  background: #fff;
  z-index: 99;
  position: fixed;
  right: 0;
  top: 0;
}

.screeningShow {
  animation: 1s showscre;
}

.screeningHide {
  animation: 1s hidescre;
}

@keyframes showscre {
  0% {
    transform: translateX(500rpx);
  }

  100% {
    transform: translateX(0);
  }
}

@keyframes hidescre {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(1000rpx);
  }
}

.screening-bottom {
  width: 80%;
  height: 90rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  right: 0;
  background: #fff;
}

.screening-bottom view {
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}

.screening-pro {
  font-size: 28rpx;
  margin: 3% 0 2% 10%;
  display: flex;
  justify-content: space-between;
}

.screening-pro-1 {
  font-weight: bold;
}

.screening-pro-2 {
  color: #999;
  margin-right: 10%;
}

.screening-minmax {
  display: flex;
  justify-content: center;
  margin: 5% 0;
}

.screening-minmax view:nth-child(2) {
  margin: 0 5%;
}

.screening-min, .screening-max {
  width: 220rpx;
  height: 54rpx;
  background: #f3f3f3;
  border-radius: 33rpx;
}

.screening-min input, .screening-max input {
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  text-align: center;
}

/* 全部 */

.screening-all {
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
}

.screening-list {
  width: 164rpx;
