.text {
  font-size: 24rpx;
  color: #666;
  display: block;
  padding: 10rpx 40rpx;
}

.top {
  padding: 0 40rpx;
  background: #fff;
}

.list {
  background: #fff;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #f3f3f3;
  padding: 15rpx 0;
  align-items: center;
}

.left image {
  height: 24rpx;
  width: 14rpx;
  margin-left: 5rpx;
}

.left {
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.right {
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  width: 80%;
  justify-content: flex-end;
  height: 70rpx;
}

.right input {
  width: 95%;
  border-radius: 15rpx;
  margin-right: 10rpx;
  text-align: right;
  height: 70rpx;
  line-height: 70rpx;
}

.right image {
  width: 14rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.right view {
  border: 1rpx solid #eee;
  border-radius: 50rpx;
  width: 125rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  margin-left: 20rpx;
  color: #999;
  font-size: 28rpx;
}

.bttom {
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 40rpx;
}

button {
  background: #ffc408 !important;
  border-radius: 100rpx;
  width: 90%;
  margin-top: 20rpx;
  color: #530b0b;
  margin-bottom: 200rpx;
}

.right view.active {
  border: 2rpx solid #ffc408;
  color: #ffc408;
}

.delet {
  font-size: 32rpx;
  color: #fc4c4cff;
  margin-top: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
