/* pages/shop_list/shop_list.wxss */

page {
  /* border-top: 0.1rpx solid #fff; */
  color: #333;
  background: #fff;
}
.bacColor{
  background: #eee;
  height: 15rpx;
}
.hengpro {
  border-bottom: 20rpx solid #eee;
  width: 100%;
}

.imgpro {
  width: 100%;
  height: 100%;
}

.search {
  height: 68rpx;
  width: 90%;
  margin: 20rpx auto;
  background: #eee;
  border-radius: 60rpx;
  line-height: 68rpx;
  position: relative;
  font-size: 26rpx;
  color: #999;
  text-align: center;
}
.search image {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  left: 23%;
  top: 25%;
}



/* 显示综合 */

.comprehensive {
  width: 91%;
  font-size: 28rpx;
  position: absolute;
  top: 14%;
  left: 0;
  background: #fff;
  z-index: 1;
  padding-left: 9%;
}

.comprehensive view {
  width: 88%;
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  /* font-size: 28rpx; */
}

.comprehensive view view:nth-child(2) {
  width: 30rpx;
  height: 30rpx;
  margin-top: 23rpx;
}

.main {
  width: 90%;
  margin: 0 auto;
  padding-top: 3%;
}
.mainList {
  height: 250rpx;
  width: 100%;
  display: flex;
  border-bottom: 1rpx solid #F3F3F3;
  position: relative;
  align-items: center
}

.mainList-lf {
  width: 210rpx;
  height: 210rpx;
  margin: auto 0;
}

.mainList-rt {
  width: 62%;
  font-size: 28rpx;
  margin-left: 3%;
}
.mainList-name {
  width: 92%;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.mainList-price {
  color: #fc4c4c;
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.mainList-price view:nth-child(1) {
  font-size: 24rpx;
}

.mainList-price view:nth-child(1) text {
  font-size: 36rpx;
}

.mainList-2-1 {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: 24%;
  right: 6%;
}

.mainList-store {
  font-size: 20rpx;
}

/* 全部 */

.screening-all {
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
}

.screening-list {
  width: 164rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 24rpx;
  background: #f3f3f3;
  color: #333;
  border-radius: 34rpx;
  margin: 2% 1% 3%;
  border: 1px solid transparent;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
