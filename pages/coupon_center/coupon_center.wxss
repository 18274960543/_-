/* lida start*/

.coupon-item-container {
}

.coupon-item {
  position: relative;
  height: 240 rpx;
  margin: 20rpx 20rpx 0 20rpx;
  border-radius: 10rpx;
}

.coupon-view {
  background: #fff;
  height: 240rpx;
  width: 500rpx;
  border-radius: 10rpx 30rpx 30rpx 10rpx;
}

.get-coupon-action {
  position: fixed;
  width: 100%;
  background: #f5f5f5;
  bottom: 0rpx;
  z-index: 100;
}

.get-coupon-btn {
  width: 95%;
  margin: 20rpx auto;
  line-height: 100rpx;
  height: 100rpx;
  border: none;
  border-radius: 60rpx;
}

.use-btn {
  background: #fff;
  position: absolute;
  width: 220rpx;
  height: 240rpx;
  right: 0;
  top: 0;
  border-radius: 30rpx 10rpx 10rpx 30rpx;
  border-left: 2px dashed #f5f5f5;
}

.use-btn-bn {
  border-radius: 40rpx;
  border: none;
  height: 80rpx;
  line-height: 80rpx;
  width: 200rpx;
  font-size: 32rpx;
  position: absolute;
  top: 80rpx;
  right: 10rpx;
}

.coupon-type {
  position: absolute;
  top: 10rpx;
  left: 0rpx;
  font-size: 12px;
  height: 48rpx;
  line-height: 48rpx;
  padding-left: 20rpx;
  width: 220rpx;
  color: #fff;
}

.coupon-type:after {
  height: 0rpx;
  width: 0rpx;
  content: '';
  border: 25rpx solid transparent;
  border-right: 25rpx solid #fff;
  position: absolute;
  right: -0rpx;
}

/* 新人 */

.coupon-type1 {
  background: red;
}

/* 全品种 */

.coupon-type2 {
  background: red;
}

/* 限品种 */

.coupon-type3 {
  background: #773adf !important;
}

.name {
  position: absolute;
  top: 10rpx;
  line-height: 48rpx;
  left: 260rpx;
  color: #666;
  font-size: 12px;
}

.discount {
  position: absolute;
  top: 60rpx;
  left: 20rpx;
  color: #333;
  font-size: 18px;
}

.minimum {
  position: absolute;
  top: 120rpx;
  color: #999;
  left: 20rpx;
  font-size: 14px;
}

.time {
  position: absolute;
  top: 175rpx;
  left: 20rpx;
  font-size: 12px;
  color: #ccc;
}

.coupon-used-view, .coupon-disabled-view {
  position: absolute;
  top: 40rpx;
  right: 140rpx;
}

.coupon-used-view .image, .coupon-disabled-view .image {
  width: 160rpx;
  height: 160rpx;
}

/* disabled 遮罩*/

.cupon-item-container-disabled .coupon-type {
  background: #ddd !important;
}

.cupon-item-container-disabled .use-btn-bn {
  background: #ddd !important;
  color: #aaa !important;
}

.cupon-item-container-disabled .discount {
  color: #ddd !important;
}

.cupon-item-container-disabled .get-coupon-btn {
  background: #ddd !important;
  color: #999 !important;
}

