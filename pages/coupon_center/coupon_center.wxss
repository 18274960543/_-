.tap {
  width: 750rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: space-around;
}

.tap-tex {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.tap-this {
  color: rgba(255, 196, 8, 1);
}

.tap-this::after {
  content: "";
  display: block;
  width: 40rpx;
  height: 8rpx;
  background-color: #ffc408;
  border-radius: 10rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  margin-top: -15rpx;
}

.none-img {
  width: 360rpx;
  height: 360rpx;
  margin-left: 195rpx;
  margin-top: 205rpx;
}

.return-btn {
  width: 200rpx;
  height: 78rpx;
  line-height: 78rpx;
  border: 1px solid rgba(102, 102, 102, 1);
  border-radius: 100px;
  font-size: 30rpx;
  font-weight: 400;
  color: #666;
  text-align: center;
  margin: 145rpx auto 0 auto;
}

