.search{display: flex;width: 85%;margin:0 auto;
background:#eee;height:70rpx;border-radius:100rpx;
padding:20rpx 170rpx;box-sizing: border-box;align-items: center;
  
}
.search image{height:40rpx;width:40rpx;}
.search input{
  height:60rpx;
  min-height:60rpx;
  font-size:26rpx;
  color:#666;
  display: flex;
  width:300rpx;
}

.top{
  background:#fff;border-bottom:1rpx solid #fdfafa; 
  border-top:1rpx solid#fdfafa;
  padding:20rpx 0 20rpx;
  position: fixed;
  width:100%;
  top:0;
  left:0;
  z-index: 100
}
.main {
  width: 90%;
  margin: 0 auto;
  margin-top:130rpx;
  background:#fff;
}
 
.mainList {
  height: 250rpx;
  width: 100%;
  display: flex;
  border-bottom: 1rpx solid #fdfafa;
  position: relative;
}

.mainList-lf {
  width: 210rpx;
  height: 210rpx;
  margin: auto 0;
}

.mainList-rt {
  width: 62%;
  font-size: 28rpx;
  margin-left: 3%;
}

.mainList-name {
  width: 92%;
  height: 80rpx;
  margin-top: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.mainList-price {
  color: #fc4c4c;
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
}

.mainList-price view:nth-child(1) {
  font-size: 24rpx;
}

.mainList-price view:nth-child(1) text {
  font-size: 36rpx;
}

.mainList-2-1 {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: 24%;
  right: 6%;
}

.mainList-store {
  font-size: 20rpx;
}
.imgpro {
  width: 100%;
  height: 100%;
}
